@model SaphirCongesCore.Models.Conges
@{
    ViewBag.Title = "Poser des congés";
}
<h3> Créer un formulaire de congés pour employé</h3>
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Accueil", "Index", "Admin")</li>
        <li>@Html.ActionLink("Demandes Acceptées", "Requests", "Admin")</li>
        <li>@Html.ActionLink("Demandes Refusées", "RejectedRequests", "Admin")</li>
    </ul>
</div>

<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Selectionnez l'employé", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeName")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Date de début : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="StartDate" id="StartDate" />
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Date de début : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="EndDate" id="EndDate" />
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nombre de jours : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoOfDays)
                <div class="halfday">
                    @Html.CheckBox("ishalf")
                    @Html.Label("Any HalfDay")
                    <span id="amorpm">
                        @Html.Label("Matin")
                        @Html.RadioButtonFor(model => model.HalfDay, "Matin")
                        @Html.Label("Après midi")
                        @Html.RadioButtonFor(model => model.HalfDay, "Après-midi")
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.NoOfDays)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Types de congés : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TypeConges")
                @Html.ValidationMessageFor(model => model.TypeConges)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Description des congés : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CongesDescription)
                @Html.ValidationMessageFor(model => model.CongesDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Creer" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.4.js")
    @Scripts.Render("~/Scripts/customjs.js")
}
