@model SaphirCongesCore.Models.Conges

@{
                /**/

                ViewBag.Title = "Supprimer";
}
<h2> Supprimer</h2>
<h3> Êtes vous certain de vouloir supprimer ceci?</h3>
<div id="delForm">
    <h4> Congés </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Date de début: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt>
            @Html.DisplayName("Date de fin: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt>
            @Html.DisplayName("Nombres de jours: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NoOfDays)
        </dd>
        <dt>
            @Html.DisplayName("Statut: ")
        </dt>
        <dd>
            @{
                if (Model.Statut == null)
                {
                    Model.Statut = "En attente";
                }
            }

            @Html.DisplayFor(model => model.Statut)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" />
            @Html.ActionLink("Retour", "FrameIndex")
        </div>
    }
</div>
<script type="text/javascript">
    document.getElementById("delForm").onsubmit = function () {
        var address = window.parent.location;
        if (window.parent && window.parent.postMessage) {
            window.parent.postMessage("refresh", address); 
        }
    }
</script>