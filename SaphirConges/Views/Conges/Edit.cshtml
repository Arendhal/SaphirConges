@model SaphirCongesCore.Models.Conges

@{
    ViewBag.Title = "Editer";
}

<h2>Editer</h2>
<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4> Modifier les congés</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CongesID)
       
        <div class="form-group">
            @Html.Label("Ancienne date de début: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br />
               @Html.DisplayFor(model => model.StartDate)
             </div>
           </div>
          
        <div class="form-group">
            @Html.Label("Nouvelle date de début: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br />
                <input type="text" name="StartDate" id="StartDate" />
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ancienne date de fin : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                 <br />
                 @Html.DisplayFor(model => model.EndDate)
               
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nouvelle date de fin: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="EndDate" id="EndDate" />
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nombre de jours : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoOfDays)
                @*<div class="halfday">
                    @Html.CheckBox("ishalf")
                    @Html.Label("Any HalfDay")
                    <span id="amorpm">
                        @Html.Label("Matin")
                        @Html.RadioButtonFor(model => model.HalfDay, "Matin", new { @class = "morning" })
                        @Html.Label("Après midi")
                        @Html.RadioButtonFor(model => model.HalfDay, "Après-midi")
                    </span>
                </div>*@
                @Html.ValidationMessageFor(model => model.NoOfDays)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Types de congés", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TypeConges, ViewBag.HolidayTypes as SelectList, "-- Choisissez le type de congés --")
                @Html.ValidationMessageFor(model => model.TypeConges)
            </div>
        </div>
        @*<div class="form-group">
            @Html.Label("Description des congés : ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CongesDescription)
                @Html.ValidationMessageFor(model => model.CongesDescription)
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editer et visualiser" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour", "Index")
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.4.js")
    @Scripts.Render("~/Scripts/customjs.js")
}

