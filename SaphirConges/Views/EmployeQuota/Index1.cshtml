@model SaphirCongesCore.Models.EmployeQuota

@{
    ViewBag.Title = "Quota de congés";
}
@section calendar{
    <script src="~/Scripts/Chart.js"></script>
}
<h2>@ViewBag.Message</h2>
<div>
    @{
        var Day1 = new DateTime(DateTime.Now.Year, 1, 1);
        var Day2 = new DateTime(DateTime.Now.Year, 12, 31);
        <h4> Période de congés actuelle à partir du @Day1.ToString("dd/MM/yyyy") jusqu'au @Day2.ToString("dd/MM/yyyy") de @ViewBag.Username</h4>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre total de jour de congés
        </dt>
        <dd>
            22,5
        </dd>
        <dt>
            Congés pris
        </dt>
        <dd>
            @ViewBag.approved
        </dd>

        <dt>
            Congés restant
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NonPaidQuota)
        </dd>
    </dl>
</div>
<h4> Quota des employés</h4>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PaidQuota)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PaidQuota)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NonPaidQuota)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NonPaidQuota)
        </dd>
    </dl>
</div>
