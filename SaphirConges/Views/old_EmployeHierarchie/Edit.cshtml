@model SaphirCongesCore.Models.EmployeHierarchie

@{
    ViewBag.Title = "Editer";
}

<h2>Editer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EmployeHierarchie</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.EmployeHierarchieID)

        <div class="form-group">
            @Html.LabelFor(model => model.Service,new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Service, ViewBag.ListeService as SelectList, "--Choisissez le service--")
                @Html.ValidationMessageFor(model => model.Service)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isResponsable, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.isResponsable)
                    @Html.ValidationMessageFor(model => model.isResponsable)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour", "Index")
</div>
